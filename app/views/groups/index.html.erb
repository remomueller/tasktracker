<% @title = 'Groups' %>
<div class="page-header">
  <h1><%= @title %></h1>
</div>

<%= form_tag groups_path, method: :get, remote: true, id: "groups_search", class: 'form-inline', data: { object: 'form-load' } do %>
  <%= hidden_field_tag :order %>
  <%= text_field_tag 'search', params[:search], class: 'form-control' %>
  <%= submit_tag 'Search', class: 'btn btn-primary' %>
<% end %>

<div id="groups"><div class="center"><%= image_tag "contour/ajax-loader.gif" %></div></div>
