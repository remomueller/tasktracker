<% @title = 'Boards' %>
<div class="page-header">
  <h1>
    <%= @title %>
    <% if @project %><small>Project <%= link_to @project.name, @project %></small><% end %>
    <%= link_to "Create Board", (@project ? new_board_path(board: { project_id: @project.id }) : new_board_path), class: 'btn btn-mini btn-primary' %>
  </h1>
</div>

<%= form_tag boards_path, method: :get, remote: true, id: "boards_search", class: 'form-search', data: { object: 'form-load' } do %>
  <%= hidden_field_tag :order, params[:order] %>
  <%= hidden_field_tag :project_id, params[:project_id] %>
  <%= text_field_tag 'search', params[:search], class: 'search-query' %>
  <%= submit_tag 'Search', class: 'btn btn-primary' %>
<% end %>

<div id="boards"><center><%= image_tag "contour/ajax-loader.gif" %></center></div>
