Hello <%= @recipient.first_name %>,<br />
<br />
<% if @recipient.all_deliverable_stickies_due_today.size > 0 %>
  You have <%= pluralize @recipient.all_deliverable_stickies_due_today.size, 'sticky' %> <%= link_to 'due today', "#{SITE_URL}/stickies?due_after=#{Date.today.strftime("%m%%2f%d%%2f%Y")}&due_before=#{Date.today.strftime("%m%%2f%d%%2f%Y")}&status%5B%5D=planned&owner_id=#{@recipient.id}" %>.<br />
  <%= @stickies = @recipient.all_deliverable_stickies_due_today; render partial: 'sticky_list' %>
<% end %>

<% if @recipient.all_deliverable_stickies_past_due.size > 0 %>
  You have <%= pluralize @recipient.all_deliverable_stickies_past_due.size, 'sticky' %> <%= link_to 'past due', "#{SITE_URL}/stickies?due_before=#{(Date.today - 1.day).strftime("%m%%2f%d%%2f%Y")}&status%5B%5D=planned&owner_id=#{@recipient.id}&order=stickies.due_date+DESC" %>.<br />
  <%= @stickies = @recipient.all_deliverable_stickies_past_due; render partial: 'sticky_list' %>
<% end %>

<% if @recipient.all_deliverable_stickies_due_upcoming.size > 0 %>
  You have <%= pluralize @recipient.all_deliverable_stickies_due_upcoming.size, 'sticky' %> <%= link_to 'upcoming', "#{SITE_URL}/stickies?due_after=#{(Date.today + 1.day).strftime("%m%%2f%d%%2f%Y")}&due_before=#{(Date.today.friday? ? Date.today + 3.days : Date.tomorrow).strftime("%m%%2f%d%%2f%Y")}&status%5B%5D=planned&owner_id=#{@recipient.id}&order=stickies.due_date" %>.<br />
  <%= @stickies = @recipient.all_deliverable_stickies_due_upcoming; render partial: 'sticky_list' %>
<% end %>

View stickies on a calendar here: <%= link_to SITE_URL, "#{SITE_URL}/stickies/calendar" %><br />
<br />
Thank you!<br />
