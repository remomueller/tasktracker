# MySQL.  Versions 4.1 and 5.0 are recommended.
#
# Install the MySQL driver:
#   gem install mysql2
#
# And be sure to use new-style password hashing:
#   http://dev.mysql.com/doc/refman/5.0/en/old-client.html
development:
  adapter: mysql2
  encoding: utf8
  reconnect: false
  database: notes_development
  pool: 5
  username: <%= print "Enter Development Username [username]: "; s = gets.chomp(); s == '' ? 'username' : s %>
  password: <%= print "Enter Development Password [password]: "; s = gets.chomp(); s == '' ? 'password' : s %>
  socket: <%= print "Enter Development Socket [/tmp/mysql.sock]: "; s = gets.chomp(); s == '' ? '/tmp/mysql.sock' : s %>
  host: <%= print "Enter Development Host: "; gets.chomp() %>

